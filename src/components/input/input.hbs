<input 
    class="input {{class}}" 
    {{#if type}}
        type={{ type }} 
    {{/if}}
    id={{ id }} 
    name={{ name }} 
    {{#if value}}
        value={{ value }}
    {{/if}}
    {{#if placeholder}}
        placeholder={{ placeholder }}
    {{/if}}
    {{#if readonly}}
        readonly={{ readonly }}
    {{/if}}>
