<li class="messege-view" data-id="{{ id }}" {{#if isSelected}} class="active"{{/if}}>
    {{{avatarIcon}}}
    <div class="info">
        <div class="info__wrap">
            <span class="name">{{ title }}</span>
            <span class="info__date">{{ time }}</span>
        </div>
        <div class="info__wrap">
            <span class="info__text">{{ last_message.content }}</span>
            {{#if unread_count}}
            <span class="info__unread-count">{{ unread_count }}</span>
            {{/if}}
        </div>
    </div>
</li>
